<h1 id="page_title">Stuff I've written</h1>
<div id="posts_wrapper" class="skinny_wrapper">
  <% @posts.each do |post| %>
  <div class="post">
    <p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>
    <h2><%= link_to post.title, post %></h2>
    <hr>
  </div>
  <% end %>
  
  <div class="pagination">
    <span class="previous_page disabled"><i class="fa fa-arrow-left"></i> Previous</span>
    <em class="current">1</em>
    <a rel="next" href="#">2</a>
    <a href="#" class="next_page">Next <i class="fa fa-arrow-right"></i></a>
  </div>
</div>